<form method="GET" action="/cryptids">
    <label for="cryptidFilter">Search! By Name!</label>
    <input id="cryptidFilter" type="text" name="cryptidFilter">
    <input type="submit">
</form>

<div>
    <% cryptids.forEach((cryptid, index) => { %>
        <h2>
            Name:
            <%= cryptid.name %>
        </h2>
        <img src="<%=cryptid.img_url %>" alt="<%= cryptid.name %>" title="<%=cryptid.name %>">
        <form method='POST' action='/cryptids/<%=  index %>/?_method=DELETE'>
            <a href="/cryptids/edit/<%= index %> ">Edit</a>
            <input type="submit" value="DELETE">
        </form>
        <% }) %>
</div>